<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".registrateActivity">

    <LinearLayout
        android:id="@+id/listag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Regístrate"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listaH"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/listag"
        app:layout_constraintStart_toStartOf="@id/listag"
        app:layout_constraintTop_toBottomOf="@id/listag">

        <LinearLayout
            android:id="@+id/rowNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="@string/lbl_name"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText

                android:id="@+id/ingreseNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:fontFamily="casual"
                android:hint=" ingrese nombre"
                android:inputType="textPersonName|textCapWords"
                android:textColor="@color/white"
                android:textColorHint="#716B6B" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ingreseEmal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Ingrese email"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:textColor="@color/white"
                android:textColorHint="#716B6B" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Telefono"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ingreseTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:digits="+0123456789-"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Ingrese su telefono"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHint="#716B6B"
                tools:ignore="Suspicious0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowIdentificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textIdentificacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="Identificación"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ingreseIdentificacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:digits="0123456789"
                android:ems="10"
                android:fadingEdgeLength="10dp"
                android:fontFamily="casual"
                android:hint="Numero de identificación"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="#716B6B" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textContraseña"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:text="contraseña"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText

                android:id="@+id/ingreseContraseña"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:fadingEdgeLength="10dp"
                android:fontFamily="casual"
                android:hint="ingrese constraseña"
                android:inputType="textPassword|textNoSuggestions"
                android:textColor="@color/white"
                android:textColorHint="#716B6B" />
        </LinearLayout>

        <Button
            android:id="@+id/boton_registrate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#6210EA"
            android:elevation="4dp"
            android:fontFamily="casual"
            android:text="Registrarme" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>